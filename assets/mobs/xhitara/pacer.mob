# Xhitara Pacer
# Moves down and to the side. Switches direction when hit. Also shoots projectiles.

name = "Xhitara Pacer"
sprite = "media/aseprite/xhitara_pacer_mob.aseprite"

colliders = [
    { shape = { Rectangle = [19.0, 8.0] }, position = [0.0, 0.0], rotation = 0.0 }
]

decorations = [
    ["media/aseprite/xhitara_pacer_thrusters.aseprite", [0.0, 6.5]],
]

[projectile_spawners.spawners.south]
timer = 1.25
position = [0.0, -8.0]
rotation = -90.0
projectile_type = "Blast"
faction = "Enemy"

[behavior]
type = "Forever"

[[behavior.children]]
type = "Action"
name = "Movement"
behaviors = [
    { action = "MoveDown" },
    { action = "BrakeHorizontal" },
    { action = "SpawnProjectile", keys = ["south"] }
]
